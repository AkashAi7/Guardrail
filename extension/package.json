{
  "name": "code-guardrail",
  "displayName": "Code Guardrail",
  "description": "Real-time security and compliance code scanner - detects secrets, SQL injection, XSS, and more",
  "version": "0.2.0",
  "publisher": "AkashAi7",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AkashAi7/Guardrail.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "security",
    "compliance",
    "linter",
    "guardrail",
    "sql-injection",
    "xss",
    "secrets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeGuardrail.analyzeFile",
        "title": "Code Guardrail: Analyze Current File"
      },
      {
        "command": "codeGuardrail.clearDiagnostics",
        "title": "Code Guardrail: Clear All Issues"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.1.6"
  }
}
